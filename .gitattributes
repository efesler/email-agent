# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Python files
*.py text eol=lf diff=python

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# SQL
*.sql text eol=lf

# Config files
.env* text eol=lf
*.conf text eol=lf
*.ini text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
